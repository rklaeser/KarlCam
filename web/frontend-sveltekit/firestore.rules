rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to webcams and labels
    // No write access from client (all writes via server-side API)

    match /webcams/{webcamId} {
      allow read: if true;
      allow write: if false;
    }

    match /labels/{labelId} {
      allow read: if true;
      allow write: if false;
    }

    match /system/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
